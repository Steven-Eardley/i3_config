# i3 Colours
set $bg     #2c2c2e
set $fg     #9f9f9f
set $hi     #efef8f
set $ac     #e15a5a
set $lighter_red	#ffb3b3
set $tx     #040404
set $ia     #8f8f8f
set $be     #8faf9f
set $yw     #ccdc90
set $gn     #88b090
set $rd     #e89393

# set some nice colors	            border     background  text	indicator
client.focused          	    $ac        $ac         $tx	$lighter_red
client.unfocused       	            $bg        $bg         $ia
client.focused_inactive    	    $bg        $bg         $ac
client.urgent                       $rd        $rd         $tx

bar {
        status_command i3status
	mode hide

        colors {
                background          $bg
                statusline          $fg
                separator           $hi
        	focused_workspace   $gn        $bg        $ac
        	active_workspace    $gn        $ac        $tx
        	inactive_workspace  $bg        $bg        $ia
        	urgent_workspace    $rd        $bg        $ac
    }
}

# Use the keyboard to raise + lower the system volume

bindsym XF86MonBrightnessUp exec xbacklight -inc 5
bindsym XF86MonBrightnessDown exec xbacklight -dec 5
bindsym XF86KbdBrightnessUp exec sudo /home/steve/bin/kbd_brightness_up
bindsym XF86KbdBrightnessDown exec sudo /home/steve/bin/kbd_brightness_down
bindsym XF86AudioRaiseVolume exec amixer -D pulse set Master 5%+ && killall -USR1 i3status
bindsym XF86AudioLowerVolume exec amixer -D pulse set Master 5%- && killall -USR1 i3status
bindsym XF86AudioMute exec amixer -D pulse set Master 1+ toggle && killall -USR1 i3status
bindsym XF86AudioPlay exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym XF86AudioNext exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
bindsym XF86AudioPrev exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"

# System for presenting shutdown options when cmd-eject is pressed
# Uses "i3exit" script in /usr/bin

set $mode_system System options: (q) lock  (w) logout  (e) suspend  (1) reboot  (2) shutdown     (esc) Do Nothing
mode "$mode_system" {
    bindsym $mod+q exec --no-startup-id i3exit lock, mode "default"
    bindsym $mod+w exec --no-startup-id i3exit logout, mode "default"
    bindsym $mod+e exec --no-startup-id i3exit suspend, mode "default"
    bindsym $mod+1 exec --no-startup-id i3exit reboot, mode "default"
    bindsym $mod+2 exec --no-startup-id i3exit shutdown, mode "default"  

    # back to normal: Escape
    bindsym $mod+Escape mode "default"
}
bindsym $mod+Escape mode "$mode_system"
